<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/ipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="服务器地址:"
        android:textSize="16sp"/>
    <EditText 
        android:id="@+id/ip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/ipt"
        android:layout_toRightOf="@+id/ipt"/>
    <TextView 
        android:id="@+id/portt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/ipt"
        android:layout_alignLeft="@+id/ipt"
        android:text="服务器端口:"
        android:textSize="16sp"/>
	<EditText 
        android:id="@+id/port"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/portt"
        android:layout_alignBottom="@+id/portt"
        android:layout_below="@+id/ip"/>
	<TextView 
	    android:id="@+id/ftpipt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:layout_below="@+id/portt"
	    android:layout_alignRight="@+id/portt"
	    android:text="FTP地址:"
	    android:textSize="16sp"/>
	<EditText 
	    android:id="@+id/ftpip"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/port"
	    android:layout_alignBottom="@+id/ftpipt"
	    android:layout_toRightOf="@+id/ftpipt"
	    />
	<TextView 
	    android:id="@+id/ftpportt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/ftpipt"
	    android:layout_alignRight="@+id/ftpipt"
	    android:text="FTP端口:"
	    android:textSize="16sp"/>
	<EditText 
	    android:id="@+id/ftpport"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_toRightOf="@+id/ftpportt"
	    android:layout_alignBottom="@+id/ftpportt"
	    android:layout_below="@+id/ftpip"
	    android:textSize="16sp"/>
</RelativeLayout>
