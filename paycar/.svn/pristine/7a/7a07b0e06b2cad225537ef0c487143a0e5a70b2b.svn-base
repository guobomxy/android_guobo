<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailInfo"
    android:background="#333333" >

    <TextView 
        android:id="@+id/danhaolabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单        号："
        android:textSize="20sp"
        android:textColor="@color/white"/>
	<TextView 
	    android:id="@+id/danhao_detail"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/danhaolabel"
	    android:textSize="20sp"
	    android:textColor="@color/blue"
	    android:text="12345678901234"/>
	
	<TextView 
	    android:id="@+id/zhuangtailabel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/danhaolabel"
	    android:text="状        态："
        android:textSize="20sp"
        android:textColor="@color/white"/>
	<TextView 
	    android:id="@+id/status_detail"
	   	android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/zhuangtailabel"
	    
	    android:layout_alignBottom="@+id/zhuangtailabel"
	    android:textSize="16sp"
	    android:textColor="@color/blue"
	    android:text="成功交车"/>
	
	<TextView 
	    android:id="@+id/datelabel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/zhuangtailabel"
	    android:text="接车日期："
        android:textSize="20sp"
        android:textColor="@color/white"/>
	<TextView 
	    android:id="@+id/date_detail"
	   	android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/datelabel"
	    
	    android:layout_alignBottom="@+id/datelabel"
	    android:textSize="16sp"
	    android:textColor="@color/blue"
	    android:text="2013-09-08 11:11:11"/>
	<TextView
	    android:id="@+id/datelabe2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/datelabel"
	    android:text="交车日期："
        android:textSize="20sp"
        android:textColor="@color/white"/>
	<TextView
	    android:id="@+id/date_detai2"
	   	android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/datelabe2"
	    
	    android:layout_alignBottom="@+id/datelabe2"
	    android:textSize="16sp"
	    android:textColor="@color/blue"
	    android:text="2013-10-09 11:11:11"/>
	
	<TextView 
	    android:id="@+id/miaoshulabel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/datelabe2"
	    android:layout_alignRight="@+id/datelabe2"
	    android:text="描       述："
	    android:textSize="20sp"
        android:textColor="@color/white"/>
	<TextView 
	    android:id="@+id/miaoshu_detail"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/danhao_detail"
	    android:layout_toRightOf="@+id/miaoshulabel"
	    android:layout_below="@+id/date_detai2"
	    android:textColor="@color/blue"
	    android:textSize="16sp"
	    android:text="111111111111111111111111111"/>

	<TextView
	    android:id="@+id/tupianlabel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/miaoshulabel"
	    android:layout_below="@+id/miaoshu_detail"
	    android:layout_marginTop="10dp"
	    android:text="签名图片："
	    android:textColor="@color/white"
	    android:textSize="16sp" />

	<ImageView
	    android:id="@+id/image_detail"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/tupianlabel"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="40dp"
	    android:src="@drawable/ic_launcher" />

	<Button
	    android:id="@+id/upload"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="2dp"
	    android:text="@string/upload"
	    android:background="@color/green" />

</RelativeLayout>
