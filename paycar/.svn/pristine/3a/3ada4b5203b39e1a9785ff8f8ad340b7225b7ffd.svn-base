<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#333333" >

    
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:paddingBottom="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/maintheme" >


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="15dp"
            android:layout_marginLeft="15dp"
            
            android:text="@string/jiechedan"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>
    <View 
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/rl1"
        android:background="@color/view_line"/>
    
    <Button 
        android:id="@+id/saomiaoyundan_receive"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:background="@color/bc_main1"
        android:textColor="@color/white"
        android:text="@string/smyd"/>
<!--         android:layout_alignLeft="@+id/text1" -->
    <Button 
        android:id="@+id/shoushuyundan_receive"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/saomiaoyundan_receive"
        android:layout_centerHorizontal="true"
        android:background="@color/bc_main1"
        android:textColor="@color/white"
        android:text="@string/ssyd"/>
    
    <View 
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_height="1sp"
        android:layout_below="@+id/shoushuyundan_receive"
        android:background="@color/white"/>
    
    
    <ListView 
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shoushuyundan_receive"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        
    </ListView>
</RelativeLayout>