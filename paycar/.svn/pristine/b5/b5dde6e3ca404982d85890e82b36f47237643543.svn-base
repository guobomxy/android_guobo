<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/maintheme" >

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:paddingBottom="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/maintheme" >


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/tip1"
            android:text="@string/regist"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/rl4"
        android:background="@color/view_line"/>

	<RelativeLayout 
	    android:id="@+id/mimall"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="18dp"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true">
	    
	    
		<TextView 
	        android:id="@+id/mimalabel0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp"
	        android:text="@string/cfmima"
	        android:textSize="20sp"
	        android:textColor="@color/white"/>
	    <EditText 
	        android:id="@+id/pwd2_regist"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dp"
	        android:paddingBottom="5dp"
	        android:background="@color/white"
	        android:layout_toRightOf="@+id/mimalabel0"
	        android:layout_alignBaseline="@+id/mimalabel0"
	        android:hint="@string/regist_pwd"
	        android:textColor="@color/maintheme"
	        android:textSize="20sp"
	        />	    
	</RelativeLayout>
    <TextView 
        android:id="@+id/pnlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/mimall"
        android:layout_alignLeft="@+id/mimall"
        android:text="@string/mima"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <EditText 
        android:id="@+id/pwd1_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_toRightOf="@+id/pnlabel"
        android:layout_alignRight="@+id/mimall"
        android:layout_alignBaseline="@+id/pnlabel"
        android:hint="@string/login_pwd"
        android:textColor="@color/maintheme"
	    android:textSize="20sp"
        />
    <TextView 
        android:id="@+id/zhlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignLeft="@+id/pnlabel"
        android:layout_above="@+id/pnlabel"
        android:text="@string/bjhm"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <EditText 
        android:id="@+id/phonenumber_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:layout_toRightOf="@+id/zhlabel"
        android:layout_alignRight="@+id/phonenumber"
        android:layout_alignBaseline="@+id/zhlabel"
        android:hint="@string/login_nick"
        android:digits="1234567890"
        android:inputType="number"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/maintheme"
	    android:textSize="20sp"
        />
<!--         android:layout_alignBottom="@+id/zhlabel" -->
    
    <TextView 
        android:id="@+id/tip_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:layout_above="@+id/zhlabel"
        android:layout_alignLeft="@+id/zhlabel"
        
        android:textSize="15sp"
        android:textColor="@color/green"/>
    
    <TextView 
        android:id="@+id/mimalabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="15sp"
        android:layout_alignLeft="@+id/mimall"
        android:layout_below="@+id/mimall"
        android:text="@string/xingming"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <EditText 
        android:id="@+id/username_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:layout_toRightOf="@+id/mimalabel1"
        android:layout_alignRight="@+id/mimall"
        android:layout_alignBaseline="@+id/mimalabel1"
        android:hint="@string/qsrxingming"
        android:textColor="@color/maintheme"
	    android:textSize="20sp"
        />
    <Button 
        android:id="@+id/querenregist"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/mimalabel1"
        android:layout_alignLeft="@+id/mimalabel1"
        android:layout_alignRight="@+id/username_regist"
        android:text="@string/regist1"
        android:background="@color/bc_main1"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <Button 
        android:id="@+id/fanhui_registui"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/querenregist"
        android:layout_alignLeft="@+id/mimalabel1"
        android:layout_alignRight="@+id/username_regist"
        android:text="@string/fanhui"
        android:background="@color/bc_main1"
        android:textColor="@color/white"
        android:textSize="20sp"/>
</RelativeLayout>
