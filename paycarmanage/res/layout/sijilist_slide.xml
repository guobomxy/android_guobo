<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sliding_theme" >
    
        <TextView 
        android:id="@+id/siji_sijilist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="姓名："
        android:layout_marginLeft="32sp"
        android:textColor="@color/sliding_textcolor"
        android:textSize="16sp"/>
        <TextView 
            android:id="@+id/name_sijilist"
            android:layout_width="48sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/siji_sijilist"
            android:layout_marginTop="10dp"
            android:text="郭博博"
            android:textColor="@color/sliding_textcolor"
            android:textSize="16sp"/>
        
        <TextView 
            android:id="@+id/phonenumberT_sijilist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/name_sijilist"
            android:text="电话："
            android:textColor="@color/sliding_textcolor"
            android:textSize="16sp"/>
        <TextView 
            android:id="@+id/phonenumber_sijilist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/phonenumberT_sijilist"
            android:layout_marginTop="10dp"
            android:text="15558036053"
            android:textColor="@color/sliding_textcolor"
            android:textSize="16sp"/>
        <View 
            android:id="@+id/viewline_sijilist"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32sp"
            android:layout_alignLeft="@id/siji_sijilist"
            android:layout_below="@id/phonenumber_sijilist"
            android:background="@color/view_line"/>

</RelativeLayout>
