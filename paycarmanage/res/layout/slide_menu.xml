<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:padding="5dp"
    android:layout_height="fill_parent"
    android:background="@color/sliding_theme"
    
     >
    
    <LinearLayout 
        android:id="@+id/linearlayout1_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/yundanlistT_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left"
            android:text="@string/yundanlist"
            android:textColor="@color/sliding_textcolor"
            android:textSize="20sp"/>
        <ListView 
            android:id="@+id/yundanlist_slide"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:minHeight="50dp">
           
        </ListView>
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/linearlayout2_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/linearlayout1_slide"        
        android:orientation="vertical">
        
         <TextView 
            android:id="@+id/sijilistT_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left"
            android:text="@string/sijilist"
            android:textColor="@color/sliding_textcolor"
            android:textSize="20sp"/>
        <ListView 
            android:id="@+id/sijilist_slide"
            android:layout_width="wrap_content"
            android:layout_height="300dp">
            
        </ListView>
        
    </LinearLayout>
    
</RelativeLayout>